<div class="container" >
  <div class="bg-light p-5 rounded-3 mt-3 w-100">
    <div class="d-flex flex-column">

      <h1>Images</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Picture</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @images.each do |image| %>
            <tr>
              <td><%= link_to image.name, image_path(image) %></td>
              <td><%= image_tag image.picture.url, size: "100x100" %></td>
              <td><%= link_to 'Edit', edit_image_path(image) %></td>
              <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Image', new_image_path %>

    </div>
  </div>
</div>

