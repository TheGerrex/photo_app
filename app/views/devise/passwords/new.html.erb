<div class="container d-flex justify-content-center m-auto" >
  <div class="bg-light p-5 rounded-3 mt-3 w-100">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,  class: "form-field row" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="col-12 mt-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 form-control" %>
        </div>

        <div class="actions mt-2">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
