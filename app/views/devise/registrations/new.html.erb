<div class="d-flex justify-content-center m-0" >
  <div class="bg-light p-5 rounded-3 w-100 mt-3">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-field row g-2'}) do |f| %>

        <div class="col-12 mt-3">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100"%>
        </div>

        <div class="col-12 mt-3">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "w-100 form-control" %>
          <% if @minimum_password_length %>
            <div id="emailHelp" class="form-text"><%= @minimum_password_length %> characters minimum</div>
          <% end %>
        </div>

        <div class="col-12 mt-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 form-control" %>
        </div>

        <%= fields_for(:payment) do |p| %>
          <div class="col-9 mt-3">
            <%= p.label :card_number, "Card Number", data: {stripe: "label"} %>
            <%= p.text_field :card_number, required: true, data: { stripe: "number"}, class: "w-100 form-control" %>
          </div>
          <div class="col-3 mt-3">
            <%= p.label :card_cvv, "Card CVV", data: {stripe: "label"} %>
            <%= p.text_field :card_cvv, required: true, data: { stripe: "cvc"}, class: "w-100 form-control" %>
          </div>
          <div class="col-12 mt-3">
            <%= p.label :card_expires, "Card Expires", data: {stripe: "label"} %>
          </div>
          <div class="col-3 mt-3">
            <%= p.select :card_expires_month, options_for_select(Payment.month_options), {include_blank: "Month"}, "data-stripe" => "exp-month", class: "form-control w-100", required: true %>
          </div>
          <div class="col-3 mt-3">
            <%= p.select :card_expires_year, options_for_select(Payment.year_options.push), {include_blank: "Year"}, data: { stripe: "exp-year" }, class: "form-control w-100", required: true %>
          </div>
        <% end %>

        <div class="actions mt-2">
          <%= f.submit "Sign up", class: "btn btn-primary"%>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
